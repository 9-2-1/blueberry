{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "src": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
